package mckennajamesproject1;

/**
 *
 * @author jamck
 */

////////////////////////////////////////////////////////////////////////
/*

In the same way as the cd class, the dvdclass creates the cd atributes 
for the inventory class to popualte.

*/
////////////////////////////////////////////////////////////////////////
public class DVD {
    private String title;
    private int number;
    private int quantity;
    private double price;
    private String type;
    
    
    // getters and setters
    public int getNumber(){
        return number;
    }
    public void setNumber(int number){
        this.number = number;
    }
    
    public String getType() {
        return type;
    }

    // Setter for type
    public void setType(String type) {
        this.type = type;
    }
    
     // Getter for title
    public String getTitle() {
        return title;
    }

    // Setter for title
    public void setTitle(String title) {
        this.title = title;
    }

    // Getter for quantity
    public int getQuantity() {
        return quantity;
    }

    // Setter for quantity
    public void setQuantity(int quantity) {
        this.quantity = quantity;
    }

    
    // Getter for price
    public double getPrice() {
        return price;
    }

    // Setter for price
    public void setPrice(double price) {
        this.price = price;
    }

    // DVD constructor
    public DVD(int number, String title, int quantity,double price, String type) {
        this.number = number;
        this.title = title;
        this.quantity = quantity;
        this.price = price;
        this.type = type;
    }
    
}
